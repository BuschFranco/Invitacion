---
interface Props {
	title?: string;
}

const { title = "Invitaci√≥n" } = Astro.props;
import Navigation from '../components/Navigation.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Libertinus+Serif:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navigation />
		<slot />
	
</body>
</html>

<style>
	header {
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 1rem;
		font-family: "Libertinus Serif", serif;
		font-size: 2.5rem;
		font-weight: 700;
		color: #ff69b4;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
		background-color: #fff8fa;
		border-bottom: 3px solid #ffcce0;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Libertinus Serif", serif;
		background-color: #fff0f5;
		color: #333;
		scroll-behavior: smooth;
	}

	:root {
		--primary-color: #ff69b4;
		--secondary-color: #ffb6c1;
		--accent-color: #ff1493;
		--background-color: #fff0f5;
		--text-color: #333;
		--container-border-radius: 15px;
		--box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		--nav-height: 60px;
	}

	@media (max-width: 768px) {
		header {
			display: none;
		}
	}

	@media (max-width: 480px) {
		header {
			font-size: 1.5rem;
			padding: 0.5rem;
		}
	}
</style>
